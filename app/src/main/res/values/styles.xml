<resources>

    <!-- style the list navigation -->
    <style name="DropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.Holo.TextView.SpinnerItem">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/greyText</item>
    </style>

    <style name="SetupSpinnerItem" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
    </style>

    <!--  App title style-->
    <style name="CustomActionBarTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="CustomActionBarTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>

    <style name="action_text">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">#ffffff</item>
    </style>
    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.TextView.PopupMenu">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/greyText</item>
    </style>


    <!-- Editor overview info Style -->
    <style name="editorMissionOverviewText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/bottom_top_bar</item>
    </style>

    <style name="mapButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_explore</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="missionItemDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_grey</item>
    </style>

    <style name="missionHeaderTitle">
        <item name="android:textColor">#85daff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="missionHeaderlabel">
        <item name="android:textColor">#85daff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="missionHeaderValue">
        <item name="android:textColor">#cbefff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Mode info Style -->
    <style name="modeHeaderTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="modeHeaderOptions">
        <item name="android:textColor">#85daff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ModeDetailText">
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="modeControl">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/setup_action_button_width</item>
    </style>

    <style name="modeLabel">
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Mode Spinner Style -->

    <style name="ModeSpinnerText" >
        <item name="android:textSize">@dimen/setup_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4d4d4d</item>
    </style>

    <!-- GPS Device Info show style -->

    <style name="commonTextGPS" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="commonInfoGPS" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="largeMissionDetailText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Number picker widget styles -->
    <style name="missionItemDetailCard">
        <item name="android:background">@drawable/bg_cell_white</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_right_card_wheel_horizontal_view</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right_card_wheel_horizontal_view</item>
        <item name="android:layout_marginTop">@dimen/margin_top_bottom_card_wheel_horizontal_view</item>
        <item name="android:layout_marginBottom">@dimen/margin_top_bottom_card_wheel_horizontal_view</item>
    </style>

    <style name="missionItemNumberPickerTitle">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="missionItemNumberPickerView">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/light_title_bg</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#777</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
