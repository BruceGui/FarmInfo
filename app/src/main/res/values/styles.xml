<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mapButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_explore</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="missionItemDetailLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white_grey</item>
    </style>

    <style name="missionHeaderTitle">
        <item name="android:textColor">#85daff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="missionHeaderlabel">
        <item name="android:textColor">#85daff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="missionHeaderValue">
        <item name="android:textColor">#cbefff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- Mode info Style -->
    <style name="modeHeaderTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="modeHeaderOptions">
        <item name="android:textColor">#85daff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ModeDetailText">
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="modeControl">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/setup_action_button_width</item>
    </style>

    <style name="modeLabel">
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Mode Spinner Style -->

    <style name="ModeSpinnerText" >
        <item name="android:textSize">@dimen/setup_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4d4d4d</item>
    </style>

</resources>
