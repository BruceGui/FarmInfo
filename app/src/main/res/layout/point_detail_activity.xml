<?xml version="1.0" encoding="utf-8"?>

<!-- 使用 list view 来显示边界点、障碍点的详细信息 -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/frame_point"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="1"
            android:text="@string/serial_num" />

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="4"
            android:text="@string/lon_label" />

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="4"
            android:text="@string/lat_label" />

    </LinearLayout>

    <!-- 显示 边界点 的 List View -->

    <ListView
        android:id="@+id/framePointsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>