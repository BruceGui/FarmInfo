<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/missionItemDetailLayout">

    <com.getpoint.farminfomanager.weights.spinners.SpinnerSelfSelect
        android:id="@+id/spinnerWaypointType"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:entries="@array/ExampleWaypointType" />

    <com.getpoint.farminfomanager.weights.spinners.SpinnerSelfSelect
        android:id="@+id/spinnerInnerIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/spinnerWaypointType"
        android:entries="@array/ExampleWaypointType" />

    <RelativeLayout
        android:id="@+id/title_rect"
        android:layout_width="320dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/wp_title_rectangle">

        <TextView
            android:id="@+id/dangerPointIndex"
            style="@style/largeMissionDetailText"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="22" />

        <View
            android:id="@+id/title_div"
            android:layout_width="1dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/dangerPointIndex"
            android:background="@drawable/wp_title_div" />

        <RelativeLayout
            android:id="@+id/title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/title_div"
            android:orientation="vertical">

            <TextView
                android:id="@+id/WaypointType"
                style="@style/missionHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/frame_point"
                android:textAllCaps="true" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/index_rect"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/title_rect"
        android:background="@drawable/wp_title_rectangle">

        <TextView
            android:id="@+id/dangerInnerIndex"
            style="@style/missionHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/frame_point"
            android:textAllCaps="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/menuHintTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title_rect"
        android:layout_alignEnd="@id/title_rect"

        android:layout_margin="10dp"
        android:src="@drawable/ic_menu_hint"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/menuHintIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/index_rect"
        android:layout_alignEnd="@id/index_rect"
        android:layout_margin="10dp"
        android:src="@drawable/ic_menu_hint"
        tools:ignore="ContentDescription" />

    <ScrollView
        android:id="@+id/altitudeScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rect">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.getpoint.farminfomanager.weights.spinnerWheel.CardWheelHorizontalView
                    android:id="@+id/altitudePickerMeter"
                    style="@style/missionItemDetailCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/altitude_label" />

                <com.getpoint.farminfomanager.weights.spinnerWheel.CardWheelHorizontalView
                    android:id="@+id/altitudePickerCentimeter"
                    style="@style/missionItemDetailCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="   " />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/button_div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/altitudeScrollView"
        android:background="@drawable/wp_title_div" />

    <Button
        android:id="@+id/id_add_danger_point"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/button_div"
        android:background="@drawable/btn_add_point_background"
        android:text="@string/btn_add"
        android:textSize="44sp" />

</RelativeLayout>