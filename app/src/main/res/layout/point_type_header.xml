<?xml version="1.0" encoding="utf-8"?>

<!-- 使用 list view 来显示边界点、障碍点的详细信息 -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pointTypeTex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/base_station_point"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/arrow_expand_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_expand_more_black_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="2"
            android:text="@string/serial_num" />

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="4"
            android:text="@string/lon_label" />

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="4"
            android:text="@string/lat_label" />

        <TextView
            style="@style/pointdetailheader"
            android:layout_weight="4"
            android:text="@string/altitude_label" />

    </LinearLayout>

</LinearLayout>