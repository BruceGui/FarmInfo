<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/point_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/point_detail_fragment"
        android:orientation="horizontal">

        <Button
            android:id="@+id/point_cancel_btn"
            style="@style/btnStyle"
            android:background="@color/btnCancelColor"
            android:text="@string/btn_cancel" />

        <Button
            android:id="@+id/point_ok_btn"
            style="@style/btnStyle"
            android:background="@color/btnOkColor"
            android:text="@string/btn_ok" />

    </LinearLayout>

</RelativeLayout>